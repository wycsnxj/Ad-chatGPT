/* pages/index/index.ttss */
.container {
display: flex;
flex-direction: column;
align-items: center;
height: 100%;
/*添加以下代码 */
background-image: linear-gradient(45deg, blue, white); /* 水流效果 */
animation: waterflow 5s linear infinite; /* 动画效果 */
}

/* 添加以下代码 */
@keyframes waterflow {
0% {
background-position: 0 0; /* 起始位置 */
}
100% {
background-position: -750rpx 0; /* 终止位置，假设图片宽度为750rpx */
}
}

.title {
font-size: 24px;
font-weight: bold;
}
.content {
display: flex;
flex-direction: column;
align-items: center;
height: 100%;
}
.option {
margin: 10px;
}
.button {
width: 200px;
height: 40px;
border-radius: 10px;
background-image: linear-gradient(to bottom, #2870ea, #1b4aef);
color: white;
}
.ad {
position: fixed;
bottom: 0;
left: 0;
right: 0;
height: 40px;
}